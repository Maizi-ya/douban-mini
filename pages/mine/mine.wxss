/* pages/mine/mine.wxss */
.container {
    background-color: white;
}

.header {
    height: 350rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.header .login {
    width: 350rpx;
    height: 90rpx;
    background-color: white;
    text-align: center;
    line-height: 90rpx;
    border-radius: 50rpx;
    color: #1b3928;
    font-size: 35rpx;
    position: absolute;
}

.header image {
    left: 0;
    top: 0;
    width: 100%;
    height: 350rpx;
}

.container .version {
    color: #808080;
    font-size: 25rpx;
    position: absolute;
    bottom: 20rpx;
    width: 100%;
    text-align: center;
}

.holdView {
    padding-left: 40rpx;
    padding-right: 40rpx;
}

.holdView .titleView {
    display: flex;
    justify-content: space-between;
    height: 120rpx;
    align-items: center;
}

.holdView .titleView .my {
    font-size: 35rpx;
    font-weight: bold;
}

.holdView .titleView .loginCheck {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.loginCheck .tip {
    font-size: 27rpx;
    color: #a2a2a2;
}

.arrow {
    width: 20rpx;
    height: 20rpx;
    margin-left: 8rpx;
    border: 4rpx solid rgb(128, 128, 128);
    border-left: 0rpx;
    border-top: 0rpx;
    transform: rotate(-45deg);
}

.itemView {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 35rpx;
}

.itemView .icon {
    width: 80rpx;
    height: 80rpx;
}

.itemView .itemHoldView {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
}

.itemView .itemHoldView .contentView {
    display: flex;
    justify-content: space-between;
}

.itemView .itemHoldView .line {
    background-color: rgb(248, 248, 248);
    height: 1rpx;
    margin-left: 30rpx;
}

.contentView .leftView {
    font-size: 28rpx;
    color: black;
    margin-left: 30rpx;
}

.contentView .readView {
    display: flex;
    align-items: center;
}

.leftView .readView .count {
    font-size: 45rpx;
    color: rgb(128, 128, 128);
}

.leftView .readView .seen {
    font-size: 23rpx;
    color: rgb(169, 169, 169);
    margin-left: 12rpx;
    margin-top: 3rpx;
}

.contentView .rightView {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-grow: 1;
    margin-left: 80rpx;
}

.contentView .rightView .actionView {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.contentView .rightView .markText {
    font-size: 25rpx;
    color: #c0c0c0;
}

.rightView .actionView .action {
    background-color: rgb(246, 246, 246);
    font-size: 22rpx;
    font-weight: bold;
    height: 45rpx;
    line-height: 45rpx;
    border-radius: 6rpx;
    padding: 5rpx 12rpx;
    color: rgb(92, 92, 92);
}