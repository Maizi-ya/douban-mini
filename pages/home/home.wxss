/* pages/home/home.wxss */
.container {
    display: flex;
    flex-direction: column;
}

.headerView {
    background-color: #39b344;
    height: 100rpx;
    display: flex;
    align-items: center;
    padding: 10rpx 20rpx;
}

.headerView .searchView {
    background-color: white;
    width: 100%;
    height: 65rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 6rpx;
}

.searchView .icon {
    width: 32rpx;
    height: 32rpx;
    margin-right: 12rpx;
}

.searchView .title {
    font-size: 26rpx;
    color: #a5a5a5;
}

.content-wrapper {
    margin-bottom: 100rpx;
}

.content-wrapper .tip-view {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 100rpx;
    padding: 0 28rpx;
}

.tip-view .title {
    color: #393939;
    font-size: 32rpx;
    font-weight: bold;
}

.tip-view .more-view {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.tip-view .more-view .more {
    color: #25ad18;
    font-size: 29rpx;
    margin-right: 2rpx;
}

.arrow {
    width: 12rpx;
    height: 12rpx;
    border: 2rpx solid #2dc32d;
    border-left: 0rpx;
    border-top: 0rpx;
    transform: rotate(-45deg);
}

.items-wrapper {
    white-space: nowrap;
}

.items-wrapper .item {
    padding-left: 25rpx;
}

.item:last-of-type {
    padding-right: 25rpx;
}



